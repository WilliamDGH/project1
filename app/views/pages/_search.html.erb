<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto text-center">

    <i class="fas fa-car-side text-white-50 fa-2x mt-2 mb-2"></i>
    <h2 class="text-white-50 mx-auto mt-2 mb-5">Search for your next commute now:</h2>

    <%= form_tag search_path do %>
    <%= text_field_tag :pg_search, "", :id=>"home_search", :placeholder=> "search start or destination.." %>

    <%= submit_tag "Search", :class=>"btn btn-primary mx-auto", :id=>'search_btn' %>
    <% end %>
  </div>
</div>

<style>
  #home_search {
    display: block;
    width: 100%;
    height: 60px;
    padding: 10px;
    border-radius: 0.5em;
    margin: 0 auto 20px auto;
  }
</style>

<script>
  function activatePlacesSearch() {
    let input = document.getElementById('home_search');
    let opts = {
      types: [ '(cities)' ]
    };
    let autocomplete = new google.maps.places.Autocomplete(input, opts);
  }
</script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAys8z47PrHg6ebR1Vw4CE6rGSowTzkqN4&libraries=places&callback=activatePlacesSearch"></script>
