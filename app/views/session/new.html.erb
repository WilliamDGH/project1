<%= form_tag login_path, :class=>"form-signin" do %>
    <div class="text-center">
      <img class="mb-4" src="/assets/logo.png" alt="" width="100" >
    </div>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <%= email_field_tag :email, nil, :placeholder=>"Email address", :class=>"form-control", :autofocus=>'ture', :required=>'true'%>

    <%= password_field_tag :password, nil, :placeholder=>"Password", :class=>"form-control", :required=>'true' %>

    <div class="checkbox mb-3">
      <label>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        Remember me
      </label>
    </div>

    <%= submit_tag "Sign In", :class=>"btn btn-lg btn-primary btn-block" %>

    <%= link_to "Forgot password?", new_password_reset_path %>
<% end %>

<style>

  body {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

</style>
