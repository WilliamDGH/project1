<h1>Log In</h1>

<% if flash[:error_message].present? %>
  <p><%= flash[:error_message] %></p>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag :eamil %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Sign In" %>
<% end %>
