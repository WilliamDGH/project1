<div class="form-signin">
    <div class="text-center">
      <img class="mb-4" src="/assets/logo.png" alt="" width="100" >
    </div>
    <h1 class="h3 mb-3 font-weight-normal">New account</h1>
    <%= render 'pages/signup_errors_message' %>

    <%= form_for @user do |f|%>
      <div class="form-group">
      <%= f.email_field :email, :required => true, :autofocus=>true, :placeholder=>'email', :class=>"form-control" %>
      </div>

      <div class="form-group">
      <%= f.password_field :password, :required=>true, :placeholder=>'password', :class=>"form-control" %>
      </div>

      <div class="form-group">
      <%= f.password_field :password_confirmation, :required=>true, :placeholder=>'confirm password', :class=>"form-control" %>
      </div>

      <div class="form-group">
      <%= f.text_field :fullname, :required=>true, :placeholder=>'user name', :class=>"form-control" %>
      </div>

      <div class="form-group">
      <%= f.submit 'Sign Up!', :class=>"btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="form-group">
    <p>Already a user? <%= link_to 'Sign in here', login_path %></p>
    </div>
</div>



<style>

  body {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

</style>
